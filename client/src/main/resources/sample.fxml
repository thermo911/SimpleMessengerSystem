<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:controller="client.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">

    <HBox fx:id="authPanel" visible="true" managed="true">
        <TextField fx:id="loginField" promptText="login" HBox.hgrow="ALWAYS"/>
        <PasswordField fx:id="passwordField" promptText="password" HBox.hgrow="ALWAYS"
                       onAction="#tryToAuth"/>
        <Button text="auth" onAction="#tryToAuth" minWidth="50"/>
        <Button text="Create account" onAction="#signingUp"/>
    </HBox>

    <HBox VBox.vgrow="ALWAYS">
        <TextArea fx:id="textArea" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" editable="false" wrapText="true"/>
        <ListView fx:id="clientList" visible = "false" managed = "false" VBox.vgrow="ALWAYS" minWidth="50"
                  onMouseClicked="#clickOnClient"
        />
    </HBox>


    <HBox fx:id="msgPanel" visible="false" managed="false">
        <TextField fx:id="textField" promptText="input message" HBox.hgrow="ALWAYS"
                   onAction="#sendMsg"/>
        <Button text="send" onAction="#sendMsg"/>
    </HBox>

</VBox>